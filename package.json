{
  "name": "@easrng/schema",
  "version": "0.0.1",
  "description": "Tiny, types-first schema validation for TypeScript.",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "author": {
    "name": "easrng",
    "url": "https://easrng.net"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^25.0.2",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "json-schema-typed": "^8.0.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "zod": "^4.2.1"
  },
  "scripts": {
    "check": "node --run prettier -- --check && tsc && tsc -p tsconfig.test.json && eslint . && c8 --check-coverage --lines 100 --functions 100 --branches 100 node --test",
    "build": "tsc -p tsconfig.build.json",
    "prepack": "node --run check && node --run build",
    "prettier": "prettier '**/*.ts' README.md *.json",
    "fmt": "node --run prettier -- -w"
  },
  "files": [
    "dist"
  ]
}
