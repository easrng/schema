{
  "name": "@easrng/schema",
  "version": "0.0.5",
  "description": "Tiny, types-first schema validation for TypeScript.",
  "homepage": "https://github.com/easrng/schema#readme",
  "bugs": {
    "url": "https://github.com/easrng/schema/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/easrng/schema.git"
  },
  "license": "MIT",
  "author": "easrng (https://easrng.net)",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./util": "./dist/util.js",
    "./pretty": "./dist/pretty.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "check": "node --run prettier -- --check && tsc && eslint . && c8 --check-coverage --lines 100 --functions 100 --branches 100 node --test",
    "build": "tsc -p tsconfig.build.json; cp src/ansi-util.* dist",
    "prepack": "node --run check && node --run build",
    "prettier": "prettier '**/*.ts' README.md *.json",
    "fmt": "node --run prettier -- -w"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@standard-schema/spec": "^1.1.0",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^25.0.2",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "json-schema-typed": "^8.0.2",
    "prettier": "^3.7.4",
    "string-width": "^8.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "typia": "^11.0.0",
    "valibot": "^1.2.0",
    "wrap-ansi": "^9.0.2",
    "zod": "^4.2.1"
  },
  "packageManager": "pnpm@10.24.0"
}
